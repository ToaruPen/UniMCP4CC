{
  "name": "unity-mcp-bridge",
  "private": true,
  "version": "1.0.0",
  "description": "MCP Bridge for Unity Editor - connects Claude Code to Unity",
  "type": "module",
  "main": "index.js",
  "bin": {
    "unity-mcp-bridge": "./index.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node index.js",
    "smoke": "node scripts/e2e-smoke.js",
    "test": "node --test",
    "test:coverage": "node --test --experimental-test-coverage --test-coverage-include=lib/bridgeLogic.js --test-coverage-lines=100 --test-coverage-functions=100 --test-coverage-branches=100"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0"
  },
  "keywords": [
    "mcp",
    "unity",
    "claude",
    "ai"
  ],
  "license": "MIT"
}
